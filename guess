    public partial class Form1 : Form
    {
       
       
        public Form1()
        {
            InitializeComponent();
          

        }

        Random numba = new Random();


        private void button1_Click(object sender, EventArgs e)
        {
         

           


            if (numericUpDown2.Value == numericUpDown1.Value)
            {
                Hints.Items.Add("you won twin it was " + numericUpDown1.Value);
                MessageBox.Show("you win!");
            }
            else if (numericUpDown2.Value > numericUpDown1.Value)
            {
                Hints.Items.Add("higher than " + numericUpDown1.Value);
                MessageBox.Show("guess higher!");
            }
            else if (numericUpDown2.Value < numericUpDown1.Value)
            {
                Hints.Items.Add("lower than " + numericUpDown1.Value);
                MessageBox.Show("guess lower!");
            }
          
        }

        private void radioButton1_CheckedChanged(object sender, EventArgs e)
        {
            numericUpDown1.Minimum = 1;
            numericUpDown1.Maximum = 10;
            int number = numba.Next(1, 11);
            numericUpDown2.Value = number;
        }

        private void radioButton2_CheckedChanged(object sender, EventArgs e)
        {
            numericUpDown1.Minimum = 1;
            numericUpDown1.Maximum = 100;
            int number = numba.Next(1, 101);
            numericUpDown2.Value = number;
        }

        private void radioButton3_CheckedChanged(object sender, EventArgs e)
        {
            numericUpDown1.Minimum = 1;
            numericUpDown1.Maximum = 1000;
            int number = numba.Next(1, 1001);
            numericUpDown2.Value = number;
        }        













        private void Form1_Load(object sender, EventArgs e)
        {
            if (numericUpDown2.Value == 0)
            {
                numericUpDown2.Minimum = 1;
                numericUpDown2.Maximum = 1000;
                int number = numba.Next(1, 11);
                numericUpDown2.Value = number;
            }
        }

